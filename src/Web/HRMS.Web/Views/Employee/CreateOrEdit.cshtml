                                        </select>
                                        <span asp-validation-for="ShiftType" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-check mt-4">
                                            <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                                            <label asp-for="IsActive" class="form-check-label">Active Employee</label>
                                            <span asp-validation-for="IsActive" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="IsFreedomFither" class="form-label">Freedom Fighter Status</label>
                                        <select asp-for="IsFreedomFither" class="form-control">
