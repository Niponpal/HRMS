@model HRMS.Application.ViewModel.EmployeeVm

@{
    var isEditMode = Model.Id > 0;
}

<div class="">
    <div class="card shadow-lg border-0 mt-2">
        <div class="card-body px-4 py-4">
            <h3 class="text-center mb-4 fw-bold text-primary">
                <i class="fas fa-user-tie me-2"></i>
                @(isEditMode ? "Edit Employee Information" : "Create New Employee")
            </h3>
            <p class="text-center text-muted mb-4">Please fill in all required fields marked with an asterisk (*)</p>

            <form asp-action="create-or-edit" asp-controller="employee" method="post" enctype="multipart/form-data" id="employeeForm">
                <input type="hidden" asp-for="Id" />

                <div class="row g-4">
                    <!-- ======================
                         PERSONAL INFORMATION (Left Column - col-md-6)
                    ======================= -->
                    <div class="col-md-6">
                        <div class="card border-primary mb-4">
                            <div class="card-header bg-primary text-white d-flex align-items-center">
                                <i class="fas fa-user me-2"></i> Personal Information
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label asp-for="EmployeeName" class="form-label required-field">Full Name</label>
                                        <input asp-for="EmployeeName" class="form-control" placeholder="Full Name" required />
                                        <span asp-validation-for="EmployeeName" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                                        <input asp-for="DateOfBirth" type="date" class="form-control" />
                                        <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Age</label>
                                        <input type="number" class="form-control" id="age" placeholder="0" min="0" readonly />
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="Sex" class="form-label required-field">Gender</label>
                                        <select asp-for="Sex" class="form-control" required>
                                            <option value="">Select Gender</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                            <option value="Other">Other</option>
                                        </select>
                                        <span asp-validation-for="Sex" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Personal Phone" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="Email Address" />
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="NID" class="form-label">NID (National ID)</label>
                                        <input asp-for="NID" class="form-control" placeholder="National ID Number" />
                                        <span asp-validation-for="NID" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="PassportNo" class="form-label">Passport No</label>
                                        <input asp-for="PassportNo" class="form-control" placeholder="Passport Number" />
                                        <span asp-validation-for="PassportNo" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="DrivingLicense" class="form-label">Driving License</label>
                                        <input asp-for="DrivingLicense" class="form-control" placeholder="License Number" />
                                        <span asp-validation-for="DrivingLicense" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="Religion" class="form-label required-field">Religion</label>
                                        <select asp-for="Religion" class="form-control" required>
                                            <option value="">Select Religion</option>
                                            <option value="Islam">Islam</option>
                                            <option value="Hinduism">Hinduism</option>
                                            <option value="Christianity">Christianity</option>
                                            <option value="Buddhism">Buddhism</option>
                                            <option value="Other">Other</option>
                                        </select>
                                        <span asp-validation-for="Religion" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="Nationality" class="form-label">Nationality</label>
                                        <input asp-for="Nationality" class="form-control" placeholder="Nationality" />
                                        <span asp-validation-for="Nationality" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="FatherName" class="form-label">Father's Name</label>
                                        <input asp-for="FatherName" class="form-control" placeholder="Father Name" />
                                        <span asp-validation-for="FatherName" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="MotherName" class="form-label">Mother's Name</label>
                                        <input asp-for="MotherName" class="form-control" placeholder="Mother Name" />
                                        <span asp-validation-for="MotherName" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="MaritalStatus" class="form-label">Marital Status</label>
                                        <select asp-for="MaritalStatus" class="form-control">
                                            <option value="">Select Marital Status</option>
                                            <option value="Single">Single</option>
                                            <option value="Married">Married</option>
                                            <option value="Divorced">Divorced</option>
                                            <option value="Widowed">Widowed</option>
                                        </select>
                                        <span asp-validation-for="MaritalStatus" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="SpouseName" class="form-label">Spouse Name</label>
                                        <input asp-for="SpouseName" class="form-control" placeholder="Spouse Name" />
                                        <span asp-validation-for="SpouseName" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="BloodGroup" class="form-label">Blood Group</label>
                                        <select asp-for="BloodGroup" class="form-control">
                                            <option value="">Select Blood Group</option>
                                            <option value="A+">A+</option>
                                            <option value="A-">A-</option>
                                            <option value="B+">B+</option>
                                            <option value="B-">B-</option>
                                            <option value="O+">O+</option>
                                            <option value="O-">O-</option>
                                            <option value="AB+">AB+</option>
                                            <option value="AB-">AB-</option>
                                        </select>
                                        <span asp-validation-for="BloodGroup" class="text-danger small"></span>
                                    </div>


                                    <div class="card border-info mb-4">
                                        
                                        <div class="card-body">
                                            <div class="row g-3">
                                                <div class="col-md-6">
                                                    <label asp-for="ProfilePicture" class="form-label">Profile Picture</label>
                                                    <div class="input-group">
                                                        <input type="file" name="profilePictureFile" class="form-control" accept="image/*" />
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                                                    {
                                                        <small class="text-muted">Current: @Model.ProfilePicture</small>
                                                    }
                                                    <span asp-validation-for="ProfilePicture" class="text-danger small"></span>
                                                </div>

                                                <div class="col-md-6">
                                                    <label class="form-label">Signature</label>
                                                    <div class="input-group">
                                                        <input type="file" name="signatureFile" class="form-control" accept="image/*" />
                                                    </div>
                                                    <span class="text-danger small"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>



                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ======================
                         SALARY & ALLOWANCES INFORMATION (Middle Column - col-md-6)
                    ======================= -->
                    <div class="col-md-6">
                        <div class="card border-success mb-4">
                            <div class="card-header bg-success text-white d-flex align-items-center">
                                <i class="fas fa-money-bill-wave me-2"></i> Salary & Allowances Information
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="GrossSalary" class="form-label">Gross Salary</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="GrossSalary" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="GrossSalary" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="BasicSalary" class="form-label">Basic Salary</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="BasicSalary" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="BasicSalary" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="HouseRent" class="form-label">House Rent</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="HouseRent" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="HouseRent" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="TransportAllowance" class="form-label">Transport Allowance</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="TransportAllowance" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="TransportAllowance" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="MedicalAllowance" class="form-label">Medical Allowance</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="MedicalAllowance" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="MedicalAllowance" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="FoodAllowance" class="form-label">Food Allowance</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="FoodAllowance" class="form-control" placeholder="0.00" step="0.01" min="0" />
