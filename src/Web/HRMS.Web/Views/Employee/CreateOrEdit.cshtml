                                            <input asp-for="BonusAllowance" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="BonusAllowance" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="OthersAllowance" class="form-label">Others Allowance</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="OthersAllowance" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="OthersAllowance" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="AttendanceBonus" class="form-label">Attendance Bonus</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="AttendanceBonus" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="AttendanceBonus" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="BreakFastAllowance" class="form-label">Breakfast Allowance</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="BreakFastAllowance" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="BreakFastAllowance" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="TiffinAllowance" class="form-label">Tiffin Allowance</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="TiffinAllowance" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="TiffinAllowance" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="LeaveFareAssistance" class="form-label">Leave Fare Assistance</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="LeaveFareAssistance" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="LeaveFareAssistance" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="MobileBill" class="form-label">Mobile Bill</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="MobileBill" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="MobileBill" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Overtime" class="form-label">Overtime</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="Overtime" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="Overtime" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="FestivalBonus" class="form-label">Festival Bonus</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="FestivalBonus" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="FestivalBonus" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="PerformaceBonus" class="form-label">Performance Bonus</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="PerformaceBonus" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="PerformaceBonus" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Increment" class="form-label">Increment</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="Increment" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="Increment" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Fine" class="form-label">Fine</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="Fine" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="Fine" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="AdvanceSalary" class="form-label">Advance Salary</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="AdvanceSalary" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="AdvanceSalary" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="LoanfromCompany" class="form-label">Loan from Company</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="LoanfromCompany" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="LoanfromCompany" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="MaternityLeave" class="form-label">Maternity Leave (Days)</label>
                                        <input asp-for="MaternityLeave" class="form-control" placeholder="0" min="0" />
                                        <span asp-validation-for="MaternityLeave" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="MaternityLeaveAmount" class="form-label">Maternity Leave Amount</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="MaternityLeaveAmount" class="form-control" placeholder="0.00" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="MaternityLeaveAmount" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ======================
                         OFFICIAL INFORMATION (Right Column - col-md-6)
                    ======================= -->
                    <div class="col-md-6">
                        <div class="card border-warning mb-4">
                            <div class="card-header bg-warning text-white d-flex align-items-center">
                                <i class="fas fa-briefcase me-2"></i> Official Information
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="EmployeeIdCardNo" class="form-label required-field">Employee ID Card No</label>
                                        <input asp-for="EmployeeIdCardNo" class="form-control" placeholder="Employee ID" required />
                                        <span asp-validation-for="EmployeeIdCardNo" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="OldEmployeeIdCardNo" class="form-label">Old Employee ID Card No</label>
                                        <input asp-for="OldEmployeeIdCardNo" class="form-control" placeholder="Old Employee ID" />
                                        <span asp-validation-for="OldEmployeeIdCardNo" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="RFID" class="form-label">RFID</label>
                                        <input asp-for="RFID" class="form-control" placeholder="RFID Number" />
                                        <span asp-validation-for="RFID" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Designation" class="form-label">Designation</label>
                                        <input asp-for="Designation" class="form-control" placeholder="Designation" />
                                        <span asp-validation-for="Designation" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="JoiningDate" class="form-label">Joining Date</label>
                                        <input asp-for="JoiningDate" type="date" class="form-control" />
                                        <span asp-validation-for="JoiningDate" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="RegNo" class="form-label">Registration No</label>
                                        <input asp-for="RegNo" class="form-control" placeholder="Registration Number" />
                                        <span asp-validation-for="RegNo" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="OfficialNumber" class="form-label">Official Phone</label>
                                        <input asp-for="OfficialNumber" class="form-control" placeholder="Official Phone Number" />
                                        <span asp-validation-for="OfficialNumber" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="OfficialEmail" class="form-label">Official Email</label>
                                        <input asp-for="OfficialEmail" type="email" class="form-control" placeholder="Official Email Address" />
                                        <span asp-validation-for="OfficialEmail" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Department" class="form-label">Department</label>
                                        <input asp-for="Department" class="form-control" placeholder="Department" />
                                        <span asp-validation-for="Department" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="EmployeeType" class="form-label">Employee Type</label>
                                        <select asp-for="EmployeeType" class="form-control">
                                            <option value="">Select Employee Type</option>
                                            <option value="Permanent">Permanent</option>
                                            <option value="Contractual">Contractual</option>
                                            <option value="Probationary">Probationary</option>
                                            <option value="Temporary">Temporary</option>
                                        </select>
                                        <span asp-validation-for="EmployeeType" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="ResignationDate" class="form-label">Resignation Date</label>
                                        <input asp-for="ResignationDate" type="date" class="form-control" />
                                        <span asp-validation-for="ResignationDate" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="CurrentWorkstation" class="form-label">Current Workstation</label>
                                        <input asp-for="CurrentWorkstation" class="form-control" placeholder="Current Workstation" />
                                        <span asp-validation-for="CurrentWorkstation" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="PalceOfPosting" class="form-label">Place of Posting</label>
                                        <input asp-for="PalceOfPosting" class="form-control" placeholder="Place of Posting" />
                                        <span asp-validation-for="PalceOfPosting" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="PresentDistrict" class="form-label">Present District</label>
