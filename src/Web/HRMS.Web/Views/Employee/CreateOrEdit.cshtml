@model HRMS.Application.ViewModel.EmployeeVm

<div class="container">
    <div class="card shadow-lg border-0 mt-5">
        <div class="card-body px-4 py-4">

            <h3 class="text-center mb-4 fw-bold">
                @(Model.Id > 0 ? "Edit Employee" : "Create Employee")
            </h3>

            <form asp-action="create-or-edit" asp-controller="employee" method="post">
                <input type="hidden" asp-for="Id" />

                <!-- ======================
                     PERSONAL INFORMATION
                ======================= -->
                <h5 class="fw-semibold mb-3 text-primary">Personal Information</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter full name" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Gender" class="form-label">Gender</label>
                        <select asp-for="Gender" class="form-control">
                            <option value="">Select Gender</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MaritalStatus" class="form-label">Marital Status</label>
                        <select asp-for="MaritalStatus" class="form-control">
                            <option value="">Select Status</option>
                            <option>Single</option>
                            <option>Married</option>
                        </select>
                    </div>
                </div>


                <!-- ======================
                     CONTACT INFORMATION
                ======================= -->
                <h5 class="fw-semibold mt-4 mb-3 text-primary">Contact Information</h5>
                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label">Phone</label>
                        <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label">Present Address</label>
                        <textarea asp-for="Address" rows="2" class="form-control" placeholder="Enter present address"></textarea>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PermanentAddress" class="form-label">Permanent Address</label>
                        <textarea asp-for="PermanentAddress" rows="2" class="form-control" placeholder="Enter permanent address"></textarea>
                    </div>

                </div>


                <!-- ======================
                     WORK INFORMATION
                ======================= -->
                <h5 class="fw-semibold mt-4 mb-3 text-primary">Work Information</h5>
                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="JoinDate" class="form-label">Join Date</label>
                        <input asp-for="JoinDate" type="date" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NationalId" class="form-label">National ID</label>
                        <input asp-for="NationalId" class="form-control" placeholder="Enter NID number" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DepartmentId" class="form-label">Department</label>
                        <select asp-for="DepartmentId" class="form-control">
                            <option value="">Select Department</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DesignationId" class="form-label">Designation</label>
                        <select asp-for="DesignationId" class="form-control">
                            <option value="">Select Designation</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SalaryStructureId" class="form-label">Salary Structure</label>
                        <select asp-for="SalaryStructureId" class="form-control">
                            <option value="">Select Structure</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ReportingManagerId" class="form-label">Reporting Manager</label>
                        <select asp-for="ReportingManagerId" class="form-control">
                            <option value="">Select Manager</option>
                        </select>
                    </div>

                </div>


                <!-- ======================
                     EMERGENCY INFORMATION
                ======================= -->
                <h5 class="fw-semibold mt-4 mb-3 text-primary">Emergency Contact</h5>
                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="EmergencyContactName" class="form-label">Contact Name</label>
                        <input asp-for="EmergencyContactName" class="form-control" placeholder="Enter name" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="EmergencyContactPhone" class="form-label">Phone</label>
                        <input asp-for="EmergencyContactPhone" class="form-control" placeholder="Enter phone number" />
                    </div>

                </div>


                <!-- ======================
                     STATUS
                ======================= -->
                <h5 class="fw-semibold mt-4 mb-2 text-primary">Status</h5>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Is Active</label>
                </div>


                <!-- ======================
                     SUBMIT BUTTON
                ======================= -->
                <button type="submit" class="btn btn-primary btn-lg w-100 mt-3">
                    @(Model.Id > 0 ? "Update Employee" : "Create Employee")
                </button>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
